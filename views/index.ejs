<head>
	<link rel='stylesheet' href='../stylesheets/public.css' />
	<title>javis - the best card game</title>
	
	<script type="text/javascript">
		$().ready(function(){
			$('#join-game').live("click", function(e){
				document.location.href="game";
			});
			
			$('#learn-game').live("click", function(e){
				document.location.href="rules";
			});
			
			$('#javis').fadeIn(1500);
			$('#join-game').delay(2500).animate({"height": "show", "opacity": "show"});
			$('#learn-game').delay(3000).animate({"height": "show", "opacity": "show"});
			
		});
	</script>
</head>

<body>
	<div id="wrapper">
		<div id="wrapper-inner">
			
			<div class="heading" id="javis" style="display:none;">Javis</div>
			<div class="btn" id="join-game" style="display:none;">Play Me</div>
			<div class="btn" id="learn-game" style="display:none;">Rules</div>
		</div>
	</div>
</body>